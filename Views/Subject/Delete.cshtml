@model charac.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h2>Delete Subject</h2>

<h4>Are you sure you want to delete this subject?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.SubName</dd>

        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.SubGenre</dd>
    </dl>

    <form asp-action="DeletePost" method="post">
        <input type="hidden" asp-for="SubId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
