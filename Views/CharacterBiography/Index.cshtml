@model IEnumerable<charac.Models.CharacterBiography>

@{
    ViewData["Title"] = "Character Biographies";
}

<h2>Character Biographies</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Biography</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Character Name</th>
            <th>Biography</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Character?.chName</td>
                <td>@item.briefDescription</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.charId" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.charId" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.charId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
