@model charac.Models.CharacterBiography

@{
    ViewData["Title"] = "Biography Details";
}

<h2>Character Biography</h2>

<dl class="row">
    <dt class="col-sm-2">Character</dt>
    <dd class="col-sm-10">@Model.Character?.chName</dd>

    <dt class="col-sm-2">Biography</dt>
    <dd class="col-sm-10">@Model.briefDescription</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.charId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>



