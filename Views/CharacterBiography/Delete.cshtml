@model charac.Models.CharacterBiography

@{
    ViewData["Title"] = "Delete Biography";
}

<h2>Delete Biography</h2>

<h4>Are you sure you want to delete this biography?</h4>

<dl class="row">
    <dt class="col-sm-2">Character</dt>
    <dd class="col-sm-10">@Model.Character?.chName</dd>

    <dt class="col-sm-2">Biography</dt>
    <dd class="col-sm-10">@Model.briefDescription</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="charId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
