@model charac.Models.Plotpoints

@{
    ViewData["Title"] = "Delete Plot Point";
}

<h2>Delete Plot Point</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.SubId</dd>

        <dt class="col-sm-2">Plot Point 1</dt>
        <dd class="col-sm-10">@Model.PlotPoint1</dd>

        <dt class="col-sm-2">Plot Point 2</dt>
        <dd class="col-sm-10">@Model.PlotPoint2</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SubId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
