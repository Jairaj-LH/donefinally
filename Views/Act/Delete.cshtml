@model charac.Models.Acts

@{
    ViewData["Title"] = "Delete Act";
}

<h2>Delete Act</h2>

<h4>Are you sure you want to delete the following act?</h4>

<dl class="row">
    <dt class="col-sm-3">Act 1</dt>
    <dd class="col-sm-9">@Model.actOne</dd>

    <dt class="col-sm-3">Act 2</dt>
    <dd class="col-sm-9">@Model.actTwo</dd>

    <dt class="col-sm-3">Act 3</dt>
    <dd class="col-sm-9">@Model.actThree</dd>

    <dt class="col-sm-3">Subject</dt>
    <dd class="col-sm-9">@Model.Subject?.SubName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SubId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
