@model IEnumerable<charac.Models.UserActivityHistory>

@{
    ViewData["Title"] = "My Activity History";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Description</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Action</td>
                    <td>@entry.Description</td>
                    <td>@entry.Timestamp.ToLocalTime().ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No activity history available.
    </div>
}

@section Scripts {
    @* No client-side scripts needed, but keep this block for consistency *@
}
